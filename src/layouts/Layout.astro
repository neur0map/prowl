---
import '../styles/global.scss';

// Base domain URL without trailing slash
const domainBaseURL = 'https://prowl.sh';
const ogImageUrl    = 'https://prowl.sh/og.png';

// Website publisher & region
const authorPublisher   = 'Prowl';
const geoRegion         = 'US';

// SEO title, description and keywords
const seoTitle          = 'Prowl | Open Source Security & Productivity Tools by neur0map';
const seoDescription    = 'Discover powerful open source security and productivity tools. Predators for offensive security, Companions for daily productivity. Built by neur0map for developers and security professionals.';
const seoKeywords       = 'open source tools, security tools, productivity tools, neur0map, github tools, developer utilities, penetration testing, command line tools, cybersecurity, hacking tools, developer productivity, security research';

// Twitter card data
const twitter = {
    title:          seoTitle,
    description:    seoDescription,
    image:          ogImageUrl,
    site:           '@prowltools',
    creator:        '@prowltools'
};

// Open graph data
const openGraph = {
    title:          seoTitle,
    description:    seoDescription,
    url:            domainBaseURL,
    image:          ogImageUrl,
    type:           'website',
    locale:         'en_US',
    siteName:       'Prowl'
};

// Dublin core
const dublinCore = {
    title:          'Prowl',
    creator:        authorPublisher,
    publisher:      authorPublisher,
    rights:         authorPublisher,
    description:    seoDescription,
    language:       'en',
    type:           'Software',
    format:         'text/html'
};

---

<!doctype html>
<html lang="en" class="bg-black text-gray-100 font-mono">

    <head>

        <!-- Crawler & Robots -->
        <meta name="robots" content="index, follow, noodp, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
        <meta name="revisit-after" content="7 days" />
        <meta name="revisit" content="after 7 days" />

        <!-- Start: Meta-Tags -->
        <meta charset="UTF-8" />
        <meta http-equiv="content-type"         content="text/html; charset=UTF-8">
        <meta http-equiv="Pragma"               content="cache" />
        <meta http-equiv="X-UA-Compatible"      content="IE=edge">
        <meta name="viewport"                   content="width=device-width, initial-scale=1">
        <!-- End: Meta-Tags -->

        <!-- Start: DNS prefetch and preconnect -->
        <!-- <link rel="preload" as="image" href="/img/logo.svg" /> -->
        <!-- <link rel="preconnect" href="https://prowl.dev" /> -->
        <!-- End: DNS prefetch and preconnect -->

        <!-- Start: Theming and Favicons -->
        <link rel="icon" type="image/png" href="/favicon.png" />
        <!-- End: Theming and Favicons -->

        <!-- Start: Misc meta tags -->
        <link rel="sitemap"                     href="/sitemap-index.xml" />
        <link rel="canonical"                   href={Astro.url} />

        <meta name="geo.region"                 content={geoRegion}>
        <meta name="author"                     content={authorPublisher}>
        <meta name="publisher"                  content={authorPublisher}>
        <meta name="copyright"                  content={authorPublisher}>
        <!-- End: Misc meta tags -->

        <!-- Start: Facebook open graph -->
        <meta property="og:title"               content={openGraph.title}>
        <meta property="og:description"         content={openGraph.description}>
        <meta property="og:url"                 content={Astro.url}>
        <meta property="og:type"                content={openGraph.type}>
        <meta property="og:image"               content={openGraph.image}>
        <meta property="og:image:secure_url"    content={openGraph.image}>
        <meta property="og:image:type"          content="image/png">
        <meta property="og:image:width"         content="4606">
        <meta property="og:image:height"        content="1536">
        <meta property="og:image:alt"           content="Prowl - Open Source Security & Productivity Tools">
        <meta property="og:locale"              content={openGraph.locale}>
        <meta property="og:site_name"           content={openGraph.siteName}>
        <!-- End: Facebook open graph -->

        <!-- Start: Twitter card -->
        <meta name="twitter:card"               content="summary_large_image">
        <meta name="twitter:title"              content={twitter.title}>
        <meta name="twitter:description"        content={twitter.description}>
        <meta name="twitter:image"              content={twitter.image}>
        <meta name="twitter:image:alt"          content="Prowl - Open Source Security & Productivity Tools">
        <meta name="twitter:site"               content={twitter.site}>
        <meta name="twitter:creator"            content={twitter.creator}>
        <!-- End: Twitter card -->

        <!-- Start: Dublin Core (DC) -->
        <meta name="DC.Title"                   content={dublinCore.title}>
        <meta name="DC.Creator"                 content={dublinCore.creator}>
        <meta name="DC.Rights"                  content={dublinCore.rights}>
        <meta name="DC.Publisher"               content={dublinCore.publisher}>
        <meta name="DC.Description"             content={dublinCore.description}>
        <meta name="DC.Language"                content={dublinCore.language}>
        <meta name="DC.Type"                    content={dublinCore.type}>
        <meta name="DC.Format"                  content={dublinCore.format}>
        <!-- End: Dublin Core (DC) -->

        <!-- Title & Description -->
        <title>{seoTitle}</title>
        <meta name="description" content={seoDescription}>
        <meta name="abstract"    content={seoDescription}>
        <meta name="keywords"    content={seoKeywords}>

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@graph": [
                {
                    "@type": "WebSite",
                    "@id": "https://prowl.sh/#website",
                    "url": "https://prowl.sh",
                    "name": "Prowl",
                    "description": "Open source security and productivity tools by neur0map",
                    "publisher": {
                        "@type": "Person",
                        "name": "neur0map",
                        "url": "https://github.com/neur0map"
                    },
                    "potentialAction": {
                        "@type": "SearchAction",
                        "target": "https://github.com/neur0map?q={search_term_string}",
                        "query-input": "required name=search_term_string"
                    }
                },
                {
                    "@type": "WebPage",
                    "@id": "https://prowl.sh/#webpage",
                    "url": "https://prowl.sh",
                    "name": "Prowl - Open Source Security & Productivity Tools",
                    "isPartOf": {"@id": "https://prowl.sh/#website"},
                    "about": {
                        "@type": "SoftwareApplication",
                        "name": "Prowl Tools",
                        "applicationCategory": "DeveloperApplication",
                        "operatingSystem": "Cross-platform",
                        "description": "Collection of open source security and productivity tools",
                        "author": {
                            "@type": "Person",
                            "name": "neur0map",
                            "url": "https://github.com/neur0map"
                        },
                        "codeRepository": "https://github.com/neur0map/prowl"
                    },
                    "breadcrumb": {
                        "@type": "BreadcrumbList",
                        "itemListElement": [
                            {
                                "@type": "ListItem",
                                "position": 1,
                                "name": "Home",
                                "item": "https://prowl.sh"
                            }
                        ]
                    }
                },
                {
                    "@type": "Person",
                    "@id": "https://prowl.sh/#author",
                    "name": "neur0map",
                    "url": "https://github.com/neur0map",
                    "sameAs": [
                        "https://github.com/neur0map"
                    ],
                    "jobTitle": "Software Developer",
                    "worksFor": {
                        "@type": "Organization",
                        "name": "Open Source"
                    }
                }
            ]
        }
        </script>

        <!-- Performance Hints -->
        <link rel="dns-prefetch" href="//github.com">
        <link rel="preconnect" href="https://api.github.com">
        
        <!-- Additional SEO Meta Tags -->
        <meta name="theme-color" content="#000000">
        <meta name="msapplication-TileColor" content="#000000">
        <meta name="application-name" content="Prowl">
        <meta name="apple-mobile-web-app-title" content="Prowl">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="mobile-web-app-capable" content="yes">

    </head>

    <body class="min-h-[100vh] flex items-center justify-center p-4">
        <slot />
    </body>

</html>