---
interface Props {
    size?: number;
}

const { size = 40 } = Astro.props;
---

<div class="flex items-center justify-center" style={`width: ${size}px; height: ${size}px;`}>
    <svg 
        width={size} 
        height={size} 
        viewBox="0 0 100 100" 
        fill="none" 
        xmlns="http://www.w3.org/2000/svg"
        class="transform hover:scale-110 transition-transform duration-200"
    >
        <!-- Swallow body -->
        <ellipse cx="50" cy="55" rx="15" ry="25" fill="#1e40af" stroke="#3b82f6" stroke-width="2"/>
        
        <!-- Swallow head -->
        <circle cx="50" cy="30" r="12" fill="#1e40af" stroke="#3b82f6" stroke-width="2"/>
        
        <!-- Beak -->
        <path d="M45 25 L40 22 L45 19 Z" fill="#fbbf24" stroke="#f59e0b" stroke-width="1"/>
        
        <!-- Eye -->
        <circle cx="52" cy="27" r="2" fill="#fff"/>
        <circle cx="53" cy="26" r="1" fill="#000"/>
        
        <!-- Wings (spread) -->
        <path d="M35 45 Q25 35 20 50 Q25 65 35 55 Z" fill="#3b82f6" stroke="#60a5fa" stroke-width="2"/>
        <path d="M65 45 Q75 35 80 50 Q75 65 65 55 Z" fill="#3b82f6" stroke="#60a5fa" stroke-width="2"/>
        
        <!-- Tail (forked) -->
        <path d="M50 75 Q40 85 35 90 M50 75 Q60 85 65 90" stroke="#3b82f6" stroke-width="3" fill="none" stroke-linecap="round"/>
        
        <!-- Wing details -->
        <path d="M30 50 Q25 45 22 52" stroke="#60a5fa" stroke-width="1" fill="none"/>
        <path d="M70 50 Q75 45 78 52" stroke="#60a5fa" stroke-width="1" fill="none"/>
        
        <!-- Speed lines (motion blur effect) -->
        <path d="M15 30 L25 32 M10 40 L20 42 M12 50 L22 52" stroke="#60a5fa" stroke-width="1" opacity="0.5" fill="none"/>
    </svg>
</div>