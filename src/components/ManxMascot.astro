---
// Manx rabbit mascot for helper/dev tools (prey)
interface Props {
    class?: string;
    size?: number;
}

const { class: className = "", size = 80 } = Astro.props;
---

<div class={`manx-mascot ${className}`} style={`width: ${size}px; height: ${size}px;`}>
    <img 
        src="/img/manx.png"
        alt="Manx Rabbit"
        width={size}
        height={size}
        class="manx-image"
    />
</div>

<style>
    .manx-mascot {
        display: inline-block;
        position: relative;
    }
    
    .manx-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: invert(1) drop-shadow(0 2px 8px rgba(0,0,0,0.4));
    }
    
    @media (prefers-reduced-motion: no-preference) {
        .manx-mascot {
            animation: manxHop 2.5s ease-in-out infinite;
        }
        
        .manx-image {
            animation: manxEarTwitch 3s ease-in-out infinite;
        }
    }
    
    @keyframes manxHop {
        0%, 100% { transform: translateY(0px); }
        20% { transform: translateY(-2px); }
        40% { transform: translateY(0px); }
        60% { transform: translateY(-1px); }
        80% { transform: translateY(0px); }
    }
    
    @keyframes manxEarTwitch {
        0%, 85%, 100% { transform: rotate(0deg); }
        90% { transform: rotate(2deg); }
        95% { transform: rotate(-1deg); }
    }
</style>